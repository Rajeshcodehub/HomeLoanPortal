@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row mt-4 g-4">

    <div class="col-md-3">
        <div class="card p-3 text-center shadow-sm">
            <i class="bi bi-people-fill" style="font-size:36px;color:#0A75FF;"></i>
            <h5 class="text-muted mt-2">Total Applications</h5>
            <h3 class="fw-bold">@ViewBag.Total</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-3 text-center shadow-sm">
            <i class="bi bi-check2-circle" style="font-size:36px;color:#28a745;"></i>
            <h5 class="text-muted mt-2">Approved</h5>
            <h3 class="fw-bold">@ViewBag.Approved</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-3 text-center shadow-sm">
            <i class="bi bi-x-circle" style="font-size:36px;color:#dc3545;"></i>
            <h5 class="text-muted mt-2">Rejected</h5>
            <h3 class="fw-bold">@ViewBag.Rejected</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card p-3 text-center shadow-sm">
            <i class="bi bi-hourglass-split" style="font-size:36px;color:#ffc107;"></i>
            <h5 class="text-muted mt-2">Pending Verification</h5>
            <h3 class="fw-bold">@ViewBag.Pending</h3>
        </div>
    </div>

</div>

<div class="row mt-4">
    <div class="col-md-6">
        <a asp-action="Applications" class="btn btn-primary w-100 py-3">
            <i class="bi bi-folder2-open me-2"></i> View All Applications
        </a>
    </div>
    <div class="col-md-6">
        <a asp-action="Reports" class="btn btn-secondary w-100 py-3">
            <i class="bi bi-bar-chart-line me-2"></i> Reports
        </a>
    </div>
</div>
