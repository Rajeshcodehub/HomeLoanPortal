@model HomeLoanPortal.ViewModels.IncomePropertyViewModel
@{
    ViewData["Title"] = "Income & Property Details";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />

<style>
    :root {
        --brand-1: #0A75FF;
        --brand-2: #003FA0;
        --muted: #586b83;
        --success: #28a745;
    }

    .wizard-wrap {
        max-width: 920px;
        margin: 28px auto;
        padding: 16px;
        font-family: Inter, sans-serif;
    }

    .stepper {
        display: flex;
        gap: 12px;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .step {
        flex: 1;
        text-align: center;
        position: relative;
        padding: 8px 6px;
    }

    .dot {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        font-weight: 700;
        color: white;
        background: linear-gradient(90deg,var(--brand-1),var(--brand-2));
    }

    .step.inactive .dot {
        background: #eef6ff;
        color: rgba(0,0,0,0.45);
    }

    .step.completed .dot {
        background: var(--success);
    }

    .title {
        margin-top: 8px;
        display: block;
        font-size: 0.9rem;
        color: #16324f;
        font-weight: 700;
    }

    .progress-small {
        height: 8px;
        background: #e6f0ff;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 18px;
    }

        .progress-small > div {
            height: 100%;
            background: linear-gradient(90deg,var(--brand-1),var(--brand-2));
            transition: width .35s ease;
        }

    .card-w {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(6px);
        border-radius: 12px;
        padding: 22px;
        box-shadow: 0 18px 40px rgba(0,80,200,0.06);
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #043a8b;
        margin-bottom: 12px;
    }

    .row-grid {
        display: grid;
        grid-template-columns: repeat(2,1fr);
        gap: 14px;
    }

    @@media (max-width:780px) {
        .row-grid {
            grid-template-columns: 1fr;
        }

        .controls {
            flex-direction: column-reverse;
        }
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: #1f2e3b;
        font-size: 0.95rem;
    }

    input, select {
        width: 100%;
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid #d6e2f5;
        box-shadow: 0 4px 10px rgba(0,0,0,0.03);
    }

    .controls {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 18px;
    }

    .btn {
        padding: 11px 18px;
        border-radius: 10px;
        border: none;
        font-weight: 700;
    }

    .btn-outline {
        background: white;
        border: 1.6px solid var(--brand-1);
        color: var(--brand-1);
    }

    .btn-primary {
        background: linear-gradient(90deg,var(--brand-1),var(--brand-2));
        color: white;
    }

    .text-danger {
        color: #d9534f;
        font-size: 0.9rem;
        margin-top: 6px;
    }
</style>

<div class="wizard-wrap">
    <div class="stepper" aria-hidden="false">
        <div class="step completed"><div class="dot">✓</div><span class="title">Personal Details</span></div>
        <div class="step active"><div class="dot">2</div><span class="title">Income & Property</span></div>
        <div class="step inactive"><div class="dot">3</div><span class="title">Loan Details</span></div>
        <div class="step inactive"><div class="dot">4</div><span class="title">Document Uploads</span></div>
        <div class="step inactive"><div class="dot">5</div><span class="title">Review & Submit</span></div>
    </div>
    @Html.Partial("_LoanWizardStepper", 2)
    <div class="progress-small"><div style="width:40%"></div></div>

    <div class="card-w">
        <div class="section-title">Income & Property Details</div>

        <form asp-action="IncomeDetails" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="LoanApplicationId" type="hidden" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <h4 style="margin-bottom:10px;color:#16324f;font-weight:700;">Income Details</h4>
            <div class="row-grid">
                <div>
                    <label asp-for="EmploymentType">Employment Type</label>
                    <select asp-for="EmploymentType">
                        <option value="">Select type</option>
                        <option>Salaried</option>
                        <option>Self-employed</option>
                    </select>
                    <span asp-validation-for="EmploymentType" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="RetirementAge">Retirement Age</label>
                    <input asp-for="RetirementAge" type="number" />
                    <span asp-validation-for="RetirementAge" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="EmployerName">Employer / Business Name</label>
                    <input asp-for="EmployerName" />
                    <span asp-validation-for="EmployerName" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="MonthlyIncome">Monthly Income (₹)</label>
                    <input asp-for="MonthlyIncome" type="number" />
                    <span asp-validation-for="MonthlyIncome" class="text-danger"></span>
                </div>
            </div>

            <hr style="margin:18px 0;" />

            <h4 style="margin-bottom:10px;color:#16324f;font-weight:700;">Property Details</h4>
            <div class="row-grid">
                <div>
                    <label asp-for="PropertyLocation">Property Location</label>
                    <input asp-for="PropertyLocation" />
                    <span asp-validation-for="PropertyLocation" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="PropertyName">Property Name</label>
                    <input asp-for="PropertyName" />
                    <span asp-validation-for="PropertyName" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="EstimatedPropertyValue">Estimated Property Value (₹)</label>
                    <input asp-for="EstimatedPropertyValue" type="number" />
                    <span asp-validation-for="EstimatedPropertyValue" class="text-danger"></span>
                </div>
            </div>

            <div class="controls">
                <a asp-action="PersonalDetails" asp-route-id="@Model.LoanApplicationId" class="btn btn-outline">Back</a>
                <button type="submit" class="btn btn-primary">Save & Continue</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
