@model HomeLoanPortal.ViewModels.DocumentUploadViewModel
@{
    ViewData["Title"] = "Upload Documents";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />

<style>
    :root {
        --brand-1: #0A75FF;
        --brand-2: #003FA0;
        --muted: #586b83;
        --success: #28a745;
    }

    .wizard-wrap {
        max-width: 920px;
        margin: 28px auto;
        padding: 16px;
        font-family: Inter, sans-serif;
    }

    .stepper {
        display: flex;
        gap: 12px;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .step {
        flex: 1;
        text-align: center;
        position: relative;
        padding: 8px 6px;
    }

    .dot {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        font-weight: 700;
        color: white;
        background: linear-gradient(90deg,var(--brand-1),var(--brand-2));
    }

    .step.inactive .dot {
        background: #eef6ff;
        color: rgba(0,0,0,0.45);
    }

    .step.completed .dot {
        background: var(--success);
    }

    .title {
        margin-top: 8px;
        display: block;
        font-size: 0.9rem;
        color: #16324f;
        font-weight: 700;
    }

    .progress-small {
        height: 8px;
        background: #e6f0ff;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 18px;
    }

        .progress-small > div {
            height: 100%;
            background: linear-gradient(90deg,var(--brand-1),var(--brand-2));
            transition: width .35s ease;
        }

    .card-w {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(6px);
        border-radius: 12px;
        padding: 22px;
        box-shadow: 0 18px 40px rgba(0,80,200,0.06);
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #043a8b;
        margin-bottom: 12px;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: #1f2e3b;
        font-size: 0.95rem;
    }

    input[type="file"] {
        display: block;
    }

    .file-list {
        font-size: 0.95rem;
        color: #24475b;
        margin-top: 8px;
    }

    .controls {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 18px;
    }

    .btn {
        padding: 11px 18px;
        border-radius: 10px;
        border: none;
        font-weight: 700;
    }

    .btn-outline {
        background: white;
        border: 1.6px solid var(--brand-1);
        color: var(--brand-1);
    }

    .btn-primary {
        background: linear-gradient(90deg,var(--brand-1),var(--brand-2));
        color: white;
    }

    .text-danger {
        color: #d9534f;
    }
</style>

<div class="wizard-wrap">
    <div class="stepper">
        <div class="step completed"><div class="dot">✓</div><span class="title">Personal Details</span></div>
        <div class="step completed"><div class="dot">✓</div><span class="title">Income & Property</span></div>
        <div class="step completed"><div class="dot">✓</div><span class="title">Loan Details</span></div>
        <div class="step active"><div class="dot">4</div><span class="title">Document Uploads</span></div>
        <div class="step inactive"><div class="dot">5</div><span class="title">Review & Submit</span></div>
    </div>
    @Html.Partial("_LoanWizardStepper", 4)
    <div class="progress-small"><div style="width:80%"></div></div>

    <div class="card-w">
        <div class="section-title">Upload Documents</div>

        <form asp-action="UploadDocuments" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input asp-for="LoanApplicationId" type="hidden" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div style="display:grid;grid-template-columns:repeat(2,1fr);gap:14px;">
                <div>
                    <label asp-for="PanCard">PAN Card (jpg, png, pdf)</label>
                    <input asp-for="PanCard" type="file" accept=".jpg,.jpeg,.png,.pdf" />
                    <div class="file-list" id="panList"></div>
                    <span asp-validation-for="PanCard" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="AadharCard">Aadhar Card (jpg, png, pdf)</label>
                    <input asp-for="AadharCard" type="file" accept=".jpg,.jpeg,.png,.pdf" />
                    <div class="file-list" id="aadhaarList"></div>
                    <span asp-validation-for="AadharCard" class="text-danger"></span>
                </div>

                <div style="grid-column:1/3">
                    <label asp-for="SalarySlip">Latest Salary Slip (pdf / image)</label>
                    <input asp-for="SalarySlip" type="file" accept=".pdf,.jpg,.jpeg,.png" />
                    <div class="file-list" id="salaryList"></div>
                    <span asp-validation-for="SalarySlip" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="NOC">NOC from Builder</label>
                    <input asp-for="NOC" type="file" accept=".pdf,.jpg,.jpeg,.png" />
                    <span asp-validation-for="NOC" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="LOA">LOA (Letter of Agreement)</label>
                    <input asp-for="LOA" type="file" accept=".pdf,.jpg,.jpeg,.png" />
                    <span asp-validation-for="LOA" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="AgreementToSale">Agreement to Sale</label>
                    <input asp-for="AgreementToSale" type="file" accept=".pdf,.jpg,.jpeg,.png" />
                    <span asp-validation-for="AgreementToSale" class="text-danger"></span>
                </div>
            </div>

            <div class="controls">
                <a asp-action="LoanDetails" asp-route-id="@Model.LoanApplicationId" class="btn btn-outline">Back</a>

                <div>
                    <a asp-action="SubmitApplication" asp-route-id="@Model.LoanApplicationId" class="btn btn-outline" style="margin-right:10px;">Review & Submit</a>
                    <button type="submit" class="btn btn-primary">Upload & Continue</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function bindPreview(selector, listId){
            var el = document.querySelector(selector);
            var list = document.getElementById(listId);
            if(!el || !list) return;
            el.addEventListener('change', function(){
                list.innerHTML = '';
                if(el.files && el.files.length){
                    var node = document.createElement('div');
                    node.textContent = el.files[0].name;
                    list.appendChild(node);
                }
            });
        }
        bindPreview('input[name="PanCard"]','panList');
        bindPreview('input[name="AadharCard"]','aadhaarList');
        bindPreview('input[name="SalarySlip"]','salaryList');
    </script>
}
