@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f5f7fa;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: #003F7F;
            color: white;
            padding-top: 20px;
        }

        .sidebar a {
            display: block;
            padding: 12px 20px;
            color: #cfd8dc;
            font-size: 1rem;
            text-decoration: none;
            transition: 0.2s;
        }

        .sidebar a:hover {
            background: #0A75FF;
            color: white;
        }

        .sidebar .active {
            background: #0A75FF;
            color: white;
        }

        .content-area {
            margin-left: 260px;
            padding: 30px;
        }

        .top-bar {
            background: white;
            padding: 12px 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.08);
        }

        .logout-btn {
            color: #dc3545;
            font-weight: 600;
        }
    </style>
</head>

<body>

    <!-- ADMIN SIDEBAR -->
    <div class="sidebar">

        <h4 class="text-center mb-4">Admin Panel</h4>

        <a asp-controller="Admin" asp-action="Index" class="active">
            <i class="bi bi-speedometer2 me-2"></i> Dashboard
        </a>

        <a asp-controller="Admin" asp-action="Applications">
            <i class="bi bi-files me-2"></i> Applications
        </a>

        <a asp-controller="Admin" asp-action="Reports">
            <i class="bi bi-bar-chart me-2"></i> Reports
        </a>

        <a asp-controller="Account" asp-action="Logout" class="logout-btn mt-4">
            <i class="bi bi-box-arrow-left me-2"></i> Logout
        </a>

    </div>

    <!-- ADMIN CONTENT -->
    <div class="content-area">

        <div class="top-bar">
            <h4>@ViewData["Title"]</h4>
        </div>

        @RenderBody()

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
