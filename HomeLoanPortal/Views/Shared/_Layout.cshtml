<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeLoan Portal</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <!-- HEADER / NAVIGATION -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#0666c4; box-shadow:0px 2px 10px rgba(0,0,0,0.15);">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/home.png" alt="Logo" style="height:32px;width:32px;margin-right:10px;">
                    <span class="fw-bold">HomeLoan Portal</span>
                </a>

                <!-- MOBILE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- NAVIGATION LINKS -->
                <div class="collapse navbar-collapse" id="mainMenu">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="LoanApplication" asp-action="MyApplications">
                                My Applications
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">
                                    Admin Dashboard
                                </a>
                            </li>
                        }



                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="LoanApplication" asp-action="PersonalDetails">
                                Start Application
                            </a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="LoanTracker" asp-action="Index">Track</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Eligibility" asp-action="Index">Eligibility</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Calculator" asp-action="EMI">EMI</a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- BODY -->
    <div class="container py-4">
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="text-center py-3">
        <p>© 2025 HomeLoan Portal | All Rights Reserved</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
